{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@adapters/*": ["adapters/*"],
      "@clients/*": ["clients/*"],
      "@queues/*": ["queues/*"],
      "@utils/*": ["utils/*"],
      "@schema/*": ["schema/*"],
      "@types/*": ["types/*"],
      "@workers/*": ["workers/*"]
    }
  }
}
